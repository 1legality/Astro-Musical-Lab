---
// src/layouts/MainLayout.astro
import { getCollection, type CollectionEntry } from 'astro:content';
import '../styles/global.css';

// Get all rhythms and sort them by the 'order' prop
const allRhythms = (await getCollection('rhythms'))
  .sort((a: CollectionEntry<'rhythms'>, b: CollectionEntry<'rhythms'>) => a.data.order - b.data.order);

const { title } = Astro.props;
---
<html lang="en">
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width" />
  <title>{title} | Rhythm Guide</title>
  <meta name="color-scheme" content="light dark" />
  <link rel="icon" href="/favicon.svg" />
  <style is:global>
    :root { --bg: #0b0b0b; --fg: #eaeaea; --muted: #9aa0a6; }
    @media (prefers-color-scheme: light) { :root { --bg: #ffffff; --fg: #111111; --muted: #6b7280; } }
    body { background: var(--bg); color: var(--fg); }
  </style>
</head>
<body class="min-h-screen antialiased">
  <nav class="bg-black/80 text-white sticky top-0 z-10 backdrop-blur px-4 py-3">
    <a class="font-semibold mr-4 hover:underline" href="/">Home</a>
    {allRhythms.map((rhythm: CollectionEntry<'rhythms'>) => (
      <a class="mr-3 hover:underline" href={`/rhythms/${rhythm.slug}`}>{rhythm.data.title}</a>
    ))}
  </nav>
  <main class="mx-auto max-w-3xl px-4 py-8">
    <h1 class="text-3xl font-bold tracking-tight mb-6">{title}</h1>
    <article class="prose prose-invert prose-headings:scroll-mt-24">
      <slot />
    </article>
  </main>
  <script>
    import { SynthEngine } from '../lib/SynthEngine';

    const synth = new SynthEngine();
    const activeLoops = new Map(); // Tracks active loops by component ID

    document.addEventListener('click', async (event) => {
      const target = event.target as HTMLElement;
      const actionButton = target.closest<HTMLButtonElement>('[data-action]');
      if (!actionButton) return;

      const container = actionButton.closest<HTMLElement>('[id^="seq16_"]');
      if (!container) return;

      const uid = container.id;
      const action = actionButton.dataset.action;

      const configAttr = container.dataset.config;
      if (!configAttr) return;

      const cfg = JSON.parse(configAttr || '{}');
      const { primary0: stepsA = [], secondary0: stepsB = [], note: noteA = 60, secondaryNote: noteB = 67, bpm: bpmVal = 120, duration: dur = 0.06 } = cfg;

      const msPerStep = (60000 / bpmVal) / 4;

      const playSequence = async () => {
        await synth.ensureContextResumed();
        const now = performance.now();
        const stepTimeouts = [];

        for (let i = 0; i < 16; i++) {
          const t = now + i * msPerStep;
          if (stepsA.includes(i)) {
            stepTimeouts.push(window.setTimeout(() => synth.playChord([noteA], dur), Math.max(0, t - performance.now())));
          }
          if (stepsB.includes(i)) {
            stepTimeouts.push(window.setTimeout(() => synth.playChord([noteB], dur), Math.max(0, t - performance.now())));
          }
        }
        return stepTimeouts;
      };

      const stopLoop = () => {
        if (activeLoops.has(uid)) {
          const { loopTimer, stepTimeouts } = activeLoops.get(uid);
          window.clearInterval(loopTimer);
          stepTimeouts.forEach(window.clearTimeout);
          activeLoops.delete(uid);
          synth.stopAll();
        }
      };

      if (action === 'play') {
        stopLoop(); // Stop any existing loop before playing once
        playSequence();
      } else if (action === 'loop') {
        if (activeLoops.has(uid)) {
          stopLoop();
        } else {
          const stepTimeouts = await playSequence();
          const period = msPerStep * 16;
          const loopTimer = window.setInterval(playSequence, period);
          activeLoops.set(uid, { loopTimer, stepTimeouts });
        }
      } else if (action === 'stop') {
        stopLoop();
      }
    });
  </script>
</body>
</html>
